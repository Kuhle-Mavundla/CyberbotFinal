<Page x:Class="CyberbotFinal.Pages.TaskAssistantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CyberbotFinal.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskAssistantPage">

    <Grid Background="DarkSlateGray">
        <StackPanel Margin="20">
            <TextBlock Text="Set a Cybersecurity Reminder" FontSize="24" Foreground="White" Margin="0,0,0,20"/>
            <TextBox x:Name="ReminderInput" Height="30" Width="400" Margin="0,0,0,10" Text="Enter your task reminder..."/>
            <Button Content="Add Reminder" Width="120" Click="AddReminder_Click"/>
            <ListBox x:Name="ReminderList" Height="200" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Page>
