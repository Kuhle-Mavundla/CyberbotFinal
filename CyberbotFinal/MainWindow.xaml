<Window x:Class="CyberbotFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberbotFinal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ChatBox" Grid.Row="0" Background="Black" Foreground="Lime" FontFamily="Consolas" FontSize="14"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="UserInput" Width="500" Height="30" FontSize="14" />
            <Button Content="Send" Width="100" Height="30" Margin="10,0,0,0" Click="Send_Click"/>
        </StackPanel>
    </Grid>
</Window>
