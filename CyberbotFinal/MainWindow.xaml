<Window x:Class="CyberbotFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberbotFinal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="ChatBox" Grid.Row="0" Background="Black" Foreground="Lime" FontFamily="Consolas" FontSize="14"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="UserInput" Width="500" Height="30" FontSize="14" />
            <Button Content="Send" Width="100" Height="30" Margin="10,0,0,0" Click="SendButton_Click"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Main Chat" Click="GoToMainChat_Click" Margin="5"/>
                <Button Content="Task Assistant" Click="GoToTask_Click" Margin="5"/>
                <Button Content="Cyber Tips" Click="GoToTips_Click" Margin="5"/>
                <Button Content="Quiz" Click="GoToQuiz_Click" Margin="5"/>
            </StackPanel>

            <!-- Page Display Area -->
            <Frame x:Name="MainFrame" Margin="10,50,10,10" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
